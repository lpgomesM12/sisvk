    <%= f.label :vk_empresa_id %><br>
    <%= f.text_field :vk_empresa_id %>
  </div>
-->
 <%end%>
  </div>
</div>


<div class="btn-group" role="group" aria-label="...">
  <button type="submit" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>  

<% end %>


