<%if notice %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     <%= notice %>
</div>
<%end%>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Exibir Vitrine</h3>
  </div>
  <div class="panel-footer" style="background-color:white;">

<p>
  <strong>Nome:</strong>
  <%= @vk_vitrine.nome_vitrine %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @vk_vitrine.desc_vitrine %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @vk_vitrine.vk_cidade.nome_cidade %>
</p>

  </div>
</div>

<div class="btn-group">          
  <%= link_to edit_vk_vitrine_path(@vk_vitrine), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to vk_vitrines_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>       
</div>
