<br>
<%= form_tag nil, method: 'GET' do %>
  <div class="row">
    <div class="col-lg-12">
      <div class="input-group">
        <input id="q" name="q" type="text" class="form-control" placeholder="Digite o nome do produto para pesquisa.">
        <span class="input-group-btn">
          <button class="btn btn-success" type="submit" >Buscar</button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->
  <br />
<% end %>

<div class="panel panel-default">

<!-- Default panel contents -->
<div class="panel-heading"><h3 class="panel-title">Selecione um produto para anunciar</h3></div>

<table class="table table-hover">  <thead>

  </thead>
  <tbody>
    <% @vk_produtos.each do |vk_produto| %>
      <tr>
        <td><%= vk_produto.nome_produto %></td>
        <td align='right'>
            <div class="btn-group">
              <%= link_to show_produto_vk_anuncio_path(vk_produto), :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-list-alt"></span> Visualizar
              <% end %>
              <%= link_to anunciar_path(vk_produto), :class => "btn btn-default btn-sm" do %> Anunciar
                <span class="glyphicon glyphicon-chevron-right"></span>
              <% end %>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
 <div class="col-lg-12">
    <%= will_paginate @vk_produtos, renderer: BootstrapPagination::Rails, :inner_window => 1, :outer_window => 0, class: "paginates"  %>
 </div>
</div>
