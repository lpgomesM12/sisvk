<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Endereços</h3>
  </div>


  <div class="alert alert-info alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     Infome para quais endereços esta promoção será valida.
  </div>

<button class="btn btn-success" type="button" onclick="$('#myModal1').modal('show');">Adicionar Endereços
   <span  class="glyphicon glyphicon-plus-sign"></span>
</button>
<hr>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Rua</th>
        <th>Quadra</th>
        <th>Lote</th>
        <th>Bairro</th>
        <th>Cep</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="tlbendereco">
      <% @vk_enderecoAnuncio.each do |anuncio| %>
        <tr>
          <td><%= anuncio.vk_endereco.nome_rua %></td>
          <td><%= anuncio.vk_endereco.desc_quadra %></td>
          <td><%= anuncio.vk_endereco.desc_lote %></td>
          <td><%= anuncio.vk_endereco.nome_bairro %></td>
           <td><%= anuncio.vk_endereco.desc_cep %></td>
          <td><%= anuncio.vk_endereco.vk_cidade.nome_cidade %></td>
          <td><%= anuncio.vk_endereco.vk_cidade.vk_estado.sigl_estado %></td>
          <td align='right'>

          <button class="btn btn-default btn-sm" type="button" onclick="AcaoExcluir('<%=empresa.id%>');">
              <span  class="glyphicon glyphicon-trash"></span>
         </button>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
         <h4 class="modal-title" id="myModalLabel">Buscar Produtos</h4>
       </div>
       <div class="modal-body">

        <label >Nome Produto</label><br>
         <div class="row">
           <div class="col-lg-12">
             <div class="input-group">
               <input id="nome_produto_pesquisa" name="nome_produto_pesquisa" onkeyup="buscaProduto()" type="text" class="form-control" placeholder="Digite o nome do produto">
               <span class="input-group-btn">
                 <button class="btn btn-success" type="button" onclick="buscaProduto();">Buscar</button>
               </span>
             </div><!-- /input-group -->
           </div><!-- /.col-lg-6 -->
         </div><!-- /.row -->
         <br />

        <table id="table_produto" name="table_produto" class="table table-hover">
           <thead>
             <tr>
               <th>Produto</th>
             </tr>
           </thead>
           <tbody id="tbodyid2">
               <tr>
               </tr>
           </tbody>
         </table>
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
       </div>
     </div>
   </div>
  </div>
