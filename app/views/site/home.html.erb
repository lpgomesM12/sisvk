<div class="row mar-bot40">
	 <div class="col-lg-4">
	 </div>
	 <div class="col-lg-6">
		<div id="vitrines" class="btn-group-vertical" role="group">
		</div>
	 </div>
</div>

<script>
 function buscaVitrines(father_id) {

  $.ajax({
    url: '<%= buscaVitrines_path %>',
    data :
    {
        father_id : father_id
    },
    success: function(data){

    $("#vitrines").html("");
      for (var i in data) {
        var item = data[i];

        $("#vitrines").append("<a href='buscaPorVitrine/"+item.id+"' class='btn btn-default btn-lg' role='button'>"+ item.nome_vitrine + "</a>");
      };

    }
  })
}



buscaVitrines();


</script>
