<table class="table table-hover" >
  <thead>
    <tr>
      <th>Nome categoria</th>
      <th>Descricao</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vk_categoriaprodutos.each do |vk_categoriaproduto| %>
      <tr>
        <td><%= vk_categoriaproduto.nome_categoria %></td>
